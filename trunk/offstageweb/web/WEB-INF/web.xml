<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <display-name>Offstage Web Application</display-name>
  <filter>
    <filter-name>HeaderFilter</filter-name>
    <filter-class>citibob.web.HeaderFilter</filter-class>
  </filter>
  <filter>
    <filter-name>OffstageDbFilter</filter-name>
    <filter-class>offstage.web.OffstageDbFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>OffstageDbFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter-mapping>
    <filter-name>HeaderFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <servlet>
    <servlet-name>SampleServlet</servlet-name>
    <servlet-class>offstage.web.SampleServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddChildServlet</servlet-name>
    <servlet-class>offstage.web.AddChildServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetFamilyStatusServlet</servlet-name>
    <servlet-class>offstage.web.GetFamilyStatusServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateChildInfoServlet</servlet-name>
    <servlet-class>offstage.web.UpdateChildInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateAdultInfoServlet</servlet-name>
    <servlet-class>offstage.web.UpdateAdultInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetContactInfoServlet</servlet-name>
    <servlet-class>offstage.web.GetContactInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateContactInfoServlet</servlet-name>
    <servlet-class>offstage.web.UpdateContactInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetPhoneInfoServlet</servlet-name>
    <servlet-class>offstage.web.GetPhoneInfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SampleServlet</servlet-name>
    <url-pattern>/SampleServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddChildServlet</servlet-name>
    <url-pattern>/AddChildServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetFamilyStatusServlet</servlet-name>
    <url-pattern>/GetFamilyStatusServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateChildInfoServlet</servlet-name>
    <url-pattern>/UpdateChildInfoServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateAdultInfoServlet</servlet-name>
    <url-pattern>/UpdateAdultInfoServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetContactInfoServlet</servlet-name>
    <url-pattern>/GetContactInfoServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateContactInfoServlet</servlet-name>
    <url-pattern>/UpdateContactInfoServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetPhoneInfoServlet</servlet-name>
    <url-pattern>/GetPhoneInfoServlet</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>
            30
        </session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>
            index.jsp
        </welcome-file>
  </welcome-file-list>
</web-app>
